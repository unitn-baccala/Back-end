{
  "openapi": "3.0.3",
  "info": {
    "title": "Swagger Baccalà - OpenAPI 3.0",
    "description": "Documentazione delle API del servizio di gestione digitale del menù: Baccalà",
    "contact": {
      "url": "https://github.com/unitn-baccala"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://localhost/api/"
    }
  ],
  "tags": [
    {
      "name": "user",
      "description": "Operations regarding users"
    },
    {
      "name": "ingredient",
      "description": "Operations regarding ingredients"
    }
  ],
  "paths": {
    "/api/user": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Crea utente",
        "operationId": "createUser",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "user saved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "400": {
            "description": "failed to create user: ",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                },
                "examples": {
                  "request body is null": {
                    "value": {
                      "msg": "req.body == null",
                      "id": "some_alphanumeric_id_24"
                    }
                  },
                  "password is null": {
                    "value": {
                      "msg": "req.body.password == null",
                      "id": "some_alphanumeric_id_24"
                    }
                  },
                  "email is null": {
                    "value": {
                      "msg": "req.body.email == null",
                      "id": "some_alphanumeric_id_24"
                    }
                  },
                  "request business name is null": {
                    "value": {
                      "msg": "req.body.business_name == null",
                      "id": "some_alphanumeric_id_24"
                    }
                  },
                  "insecure passoword": {
                    "value": {
                      "msg": "insecure password",
                      "id": "some_alphanumeric_id_24"
                    }
                  },
                  "invalid email address": {
                    "value": {
                      "msg": "invalid email address",
                      "id": "some_alphanumeric_id_24"
                    }
                  },
                  "email address is taken": {
                    "value": {
                      "msg": "email address is taken",
                      "id": "some_alphanumeric_id_24"
                    }
                  },
                  "business name is taken": {
                    "value": {
                      "msg": "business name is taken",
                      "id": "some_alphanumeric_id_24"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalServerErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "user"
        ],
        "summary": "Elimina utente",
        "operationId": "deleteUser",
        "responses": {
          "200": {
            "description": "user deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                },
                "example": {
                  "msg": "user deleted successfully",
                  "id": "some_alphanumeric_id_24"
                }
              }
            }
          },
          "400": {
            "description": "failed to delete user: "
          },
          "500": {
            "description": "internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalServerErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/ingredient": {
      "post": {
        "tags": [
          "ingredient"
        ],
        "summary": "Create a new ingredient",
        "operationId": "createIngredient",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Ingredient"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "ingredient saved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                },
                "example": {
                  "msg": "ingredient saved successfully",
                  "id": "some_alphanumeric_id_24"
                }
              }
            }
          },
          "400": {
            "description": "failed to create ingredient: ",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseWithNoId"
                }
              }
            }
          },
          "500": {
            "description": "internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalServerErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "ingredient"
        ],
        "summary": "Delete an ingredient",
        "operationId": "deleteIngredient",
        "responses": {
          "200": {
            "description": "ingredient deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseWithNoId"
                },
                "example": {
                  "msg": "ingredient deleted successfully"
                }
              }
            }
          },
          "400": {
            "description": "failed to delete ingredient: ",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseWithNoId"
                }
              }
            }
          },
          "500": {
            "description": "internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalServerErrorResponse"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "ingredient"
        ],
        "summary": "Retrieve a user's ingredients",
        "operationId": "getIngredients",
        "parameters": [
          {
            "name": "business_name",
            "in": "query",
            "description": "The name of the business which owns the ingredients that will be returned",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "ingredients retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "owner_id": {
                        "example": "some_alphanumeric_id_24"
                      },
                      "name": {
                        "example": "prova"
                      },
                      "id": {
                        "example": "some_alphanumeric_id_24"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "failed to retrieve ingredients",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseWithNoId"
                }
              }
            }
          },
          "500": {
            "description": "internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalServerErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "mario.rossi@gmail.com"
          },
          "business_name": {
            "type": "string",
            "example": "Trattoria Volpe"
          },
          "password": {
            "type": "string",
            "example": "12characterpassword"
          },
          "enable_2fa": {
            "type": "boolean",
            "default": false
          }
        },
        "required": [
          "email",
          "business_name",
          "password"
        ]
      },
      "Ingredient": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Passata di Pomodoro"
          }
        },
        "required": [
          "name"
        ]
      },
      "Response": {
        "type": "object",
        "properties": {
          "msg": {
            "type": "string",
            "example": "informational message"
          },
          "id": {
            "type": "string",
            "example": "some_alphanumeric_id_24"
          }
        }
      },
      "ResponseWithNoId": {
        "type": "object",
        "properties": {
          "msg": {
            "type": "string",
            "example": "informational message"
          }
        }
      },
      "InternalServerErrorResponse": {
        "type": "object",
        "properties": {
          "msg": {
            "type": "string",
            "example": "internal server error"
          }
        }
      }
    }
  }
}